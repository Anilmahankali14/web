    <script>
        // Mobile Menu Toggle
        document.querySelector('.mobile-menu').addEventListener('click', function () {
            document.querySelector('.nav-links').classList.toggle('active');
        });

        // Copy UPI ID
        function copyUpiId() {
            const upiId = 'earning777@ptaxis';
            navigator.clipboard.writeText(upiId).then(() => {
                alert('‚úÖ UPI ID copied: ' + upiId);
                const upiElement = document.getElementById('upiId');
                const originalText = upiElement.innerHTML;
                upiElement.innerHTML = '<i class="fas fa-check"></i> Copied!';
                upiElement.style.background = 'var(--success)';
                
                setTimeout(() => {
                    upiElement.innerHTML = originalText;
                    upiElement.style.background = '';
                }, 2000);
            });
        }

        // Generate Referral Code
        function generateReferralCode() {
            const name = document.getElementById('name').value.trim();
            const contact = document.getElementById('contact').value.trim();

            if (name && contact.length >= 5) {
                const namePart = name.replace(/\s+/g, '').substring(0, 5).toUpperCase();
                const phonePart = contact.substring(Math.max(0, contact.length - 5));
                const referralCode = namePart + phonePart;
                
                document.getElementById('generatedReferralCode').textContent = referralCode;
                document.getElementById('referralCodeContainer').style.display = 'block';
            }
        }

        // Copy Referral Code
        function copyReferralCode() {
            const code = document.getElementById('generatedReferralCode').textContent;
            if (code) {
                navigator.clipboard.writeText(code).then(() => {
                    alert('‚úÖ Referral code copied: ' + code);
                });
            }
        }

        // Form Submission
        document.getElementById('joinForm').addEventListener('submit', function (e) {
            e.preventDefault();

            const formData = {
                name: document.getElementById('name').value,
                contact: document.getElementById('contact').value,
                paymentDetails: document.getElementById('paymentDetails').value,
                location: document.getElementById('location').value,
                referralCode: document.getElementById('generatedReferralCode').textContent || 'Not generated',
                timestamp: new Date().toLocaleString('en-IN')
            };

            // Create WhatsApp message
            const whatsappMessage = encodeURIComponent(
                `üéØ *NEW REGISTRATION - MULTICONNECT* üéØ\n\n` +
                `üìã *Registration Details*\n` +
                `‚Ä¢ üë§ Name: ${formData.name}\n` +
                `‚Ä¢ üì± WhatsApp: ${formData.contact}\n` +
                `‚Ä¢ üìç Location: ${formData.location}\n\n` +
                `üí≥ *Payment Information*\n` +
                `‚Ä¢ ${formData.paymentDetails}\n\n` +
                `üîó *Referral Code:* ${formData.referralCode}\n\n` +
                `üìÖ Submitted at: ${formData.timestamp}\n` +
                `‚úÖ Payment completed - Please activate account`
            );

            // Open WhatsApp
            window.open(`https://wa.me/919985943961?text=${whatsappMessage}`, '_blank');
            
            // Show success message
            alert('‚úÖ Form submitted! Opening WhatsApp to send details.');
        });

        // Earnings Calculator
        function updateEarnings() {
            const bookings = parseInt(document.getElementById('bookingsSlider').value);
            const team = parseInt(document.getElementById('teamSlider').value);
            
            document.getElementById('bookingsValue').textContent = `${bookings} bookings`;
            document.getElementById('teamValue').textContent = `${team} people`;
            
            // Calculate commission
            let commission = 0;
            if (bookings < 5) commission = bookings * 700;
            else if (bookings < 10) commission = bookings * 800;
            else if (bookings <= 20) commission = bookings * 1000;
            else commission = bookings * 1100;
            
            // Calculate referral earnings (simplified)
            const referralEarnings = (team * 100) + (team * 3 * 50) + (team * 6 * 50); // Estimated L2 and L3
            
            // Update displays
            document.getElementById('commissionDisplay').textContent = `‚Çπ${commission.toLocaleString()}`;
            document.getElementById('referralDisplay').textContent = `‚Çπ${referralEarnings.toLocaleString()}`;
            document.getElementById('totalDisplay').textContent = `‚Çπ${(5000 + commission + referralEarnings).toLocaleString()}`;
        }

        function resetCalculator() {
            document.getElementById('bookingsSlider').value = 10;
            document.getElementById('teamSlider').value = 5;
            updateEarnings();
        }

        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const targetId = this.getAttribute('href');
                if (targetId === '#') return;

                const targetElement = document.querySelector(targetId);
                if (targetElement) {
                    window.scrollTo({
                        top: targetElement.offsetTop - 80,
                        behavior: 'smooth'
                    });
                    
                    // Update active nav
                    document.querySelectorAll('.nav-links a').forEach(link => {
                        link.classList.remove('active');
                    });
                    this.classList.add('active');
                    
                    // Close mobile menu
                    document.querySelector('.nav-links').classList.remove('active');
                }
            });
        });

        // Initialize
        document.addEventListener('DOMContentLoaded', function() {
            updateEarnings();
            
            // Update tracker based on scroll
            window.addEventListener('scroll', function() {
                const sections = document.querySelectorAll('section[id]');
                const scrollPos = window.scrollY + 100;
                
                sections.forEach(section => {
                    const sectionTop = section.offsetTop;
                    const sectionId = section.getAttribute('id');
                    
                    if (scrollPos >= sectionTop) {
                        document.querySelectorAll('.nav-links a').forEach(link => {
                            link.classList.remove('active');
                            if (link.getAttribute('href') === `#${sectionId}`) {
                                link.classList.add('active');
                            }
                        });
                    }
                });
            });
        });
    </script>
</body>
